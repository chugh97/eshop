<div class="span-4">
<%=form_tag('/user/create', method: "post", :id => "user_registration" ) do%>
    <h1>New User</h1>

      <div>
        First name: <input type="text" id="user[name]" name="user[name]" class="validate" />    <br/>

        Last name: <input  type="text" id="user[last_name]" name="user[last_name]" class="validate"/>  <br/>

        Email <input  type="text" id="user[email]" name="user[email]" class="validate"/>   <br/>

        Confirm Email <input  type="text" id="user[confirmation_email]" name="user[confirmation_email]" class="validate"/>   <br>
      </div>

      <%= submit_tag("Sign Up") %>

<% end %>
</div>